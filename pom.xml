        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-release-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <goals>install</goals>
          <tagNameFormat>REL-${project.version}</tagNameFormat>
